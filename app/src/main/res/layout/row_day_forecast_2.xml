<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/row_day_forecast__tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_day_forecast__tvDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/row_day_forecast__tvDate"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/row_day_forecast__tvTempMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/row_day_forecast__tvDayOfWeek"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/row_day_forecast__tvTempMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/row_day_forecast__tvTempMax"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/row_day_forecast__ivWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/row_day_forecast__tvTempMin"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/weather_state" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>